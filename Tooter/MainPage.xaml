<Page
    x:Class="Tooter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tooter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary Source="ms-appx:///Styles/ControlStyles.xaml"/>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Style="{StaticResource NameTextBlockButton}">Olea</Button>
                <Button Style="{StaticResource UsernameTextBlockButton}">@ironychild</Button>
            </StackPanel>
            <TextBlock FontSize="20"
                       Margin="8,0,0,0">Remember when I was on Twitter?</TextBlock>
            <Button Style="{StaticResource BlockButton}">Settings</Button>
            <Button Style="{StaticResource BlockButton}">Messages</Button>
            <Button Style="{StaticResource BlockButton}">Message</Button>
            
        </StackPanel>
    </Grid>
</Page>
