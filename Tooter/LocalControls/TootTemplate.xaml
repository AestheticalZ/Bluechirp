<UserControl
    x:Class="Tooter.LocalControls.TootTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tooter.LocalControls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="200s"
    d:DesignWidth="300">


    <controls:DropShadowPanel 
                              ShadowOpacity="0.25"
                              BlurRadius="12"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch">
        <Grid Background="{ThemeResource SystemAltHighColor}"
              CornerRadius="4"
              Padding="24,24,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Ellipse Width="60"
               Height="60"
               Margin="0,0,24,0"
               VerticalAlignment="Top"
                   Fill="{ThemeResource DefaultTextForegroundThemeBrush}"/>

            <StackPanel Name="TootContentStackPanel" Grid.Column="1"
                    VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Name="NamesStackPanel" >
                    <StackPanel.Resources>
                        <ResourceDictionary Source="ms-appx:///Styles/ControlStyles.xaml"/>
                    </StackPanel.Resources>
                    <Button Content="Pete" Style="{ThemeResource NameTextBlockButton}"/>
                    <Button Content="@Peter" Margin="8,0,0,0" 
                        Style="{StaticResource UsernameTextBlockButton}"/>
                </StackPanel>

                <TextBlock Name="TootContent" Text="This is looking great so far!"
                       FontSize="24"
                       TextWrapping="WrapWholeWords">
                </TextBlock>
            </StackPanel>
            <StackPanel Name="TootActionStackPanel" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="-8,20,0,0">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource TextBlockButtonStyle}">
                        <Setter Property="Foreground"
                                Value="{ThemeResource DefaultTextForegroundThemeBrush}"/>
                    </Style>
                    <Style TargetType="FontIcon">
                        <Setter Property="FontSize" Value="28"/>
                    </Style>
                </StackPanel.Resources>
                <Button Name="ReplyButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE97A;" />
                </Button>
                <Button Name="BoostButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8EB;" />
                </Button>
                <Button Name="FavouriteButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE734;" />
                </Button>
                <Button Name="MoreButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE10C;" />
                </Button>
            </StackPanel>
        </Grid>
    </controls:DropShadowPanel>
</UserControl>
