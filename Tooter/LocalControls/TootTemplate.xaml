        <RelativePanel Background="{ThemeResource SystemAltHighColor}"
                       CornerRadius="4"
                       Padding="24">
            <muxc:PersonPicture Width="60"
               Height="60"
               Margin="0,0,24,0"
               ProfilePicture="{x:Bind CurrentStatus.Account.AvatarUrl}"
                                Name="StatusAvatar"/>

            <StackPanel Orientation="Horizontal" Name="NamesStackPanel"
                        RelativePanel.RightOf="StatusAvatar">
                <StackPanel.Resources>
                    <ResourceDictionary Source="ms-appx:///Styles/ControlStyles.xaml"/>
                </StackPanel.Resources>
                <Button Content="{x:Bind CurrentStatus.Account.DisplayName}" Style="{ThemeResource NameTextBlockButton}"/>
                <Button Content="{x:Bind CurrentStatus.Account.UserName}" Margin="8,0,0,0" 
                        Style="{StaticResource NameTextBlockButton}"/>
            </StackPanel>

            <TextBlock x:Name="StatusTimeStamp" Text="2h"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True"/>

            <TextBlock x:Name="StatusContent"
                       RelativePanel.RightOf="StatusAvatar"
                       RelativePanel.Below="StatusAvatar"
                       Text="{x:Bind CurrentStatus.Content}"/>

            <StackPanel Name="TootActionStackPanel" 
                        Orientation="Horizontal" 
                        RelativePanel.RightOf="StatusAvatar"
                        RelativePanel.Below="StatusContent"
                        Margin="0,20,0,0">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource TextBlockButtonStyle}">
                        <Setter Property="Foreground"
                                Value="{ThemeResource DefaultTextForegroundThemeBrush}"/>
                    </Style>
                    <Style TargetType="FontIcon">
                        <Setter Property="FontSize" Value="28"/>
                    </Style>
                </StackPanel.Resources>
                <Button Name="ReplyButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE97A;" />
                </Button>
                <Button Name="BoostButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8EB;" />
                </Button>
                <Button Name="FavouriteButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE734;" />
                </Button>
                <Button Name="MoreButton">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE10C;" />
                </Button>
            </StackPanel>
        </RelativePanel>
    </controls:DropShadowPanel>
</UserControl>
